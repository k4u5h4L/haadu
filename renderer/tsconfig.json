{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["components/*"],
            "@/constants/*": ["constants/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"],
            "@/public/*": ["public/*"],
            "@/prisma/*": ["prisma/*"],
            "@/helpers/*": ["helpers/*"],
            "@/styles/*": ["styles/*"],
            "@/node_modules/*": ["node_modules/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["node_modules"]
}
